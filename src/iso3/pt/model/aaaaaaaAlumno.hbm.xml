<?xml version="1.0"?> <!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="iso3.pt.model.Alumno" table="ALUMNOS">

		
        <property name="dni" column="ALM_DNI" unique="true" not-null="true"/>
		<property name="password" column="ALM_PASSWORD" unique="true" not-null="true"/>
		<property name="nombre" column="ALM_NOMBRE" unique="true" not-null="true"/>
		<property name="telefono" column="ALM_TELEFONO" unique="true" not-null="true"/>
		
		<!-- Relacion con Evaluacion -->
		<set name="evaluaciones" table="EVALUACIONES" lazy="true" cascade="all" inverse="true">
			<key column="ALM_ID"/>
			<one-to-many class="iso3.pt.model.Evaluacion"/>
		</set>
		
		
		<!-- Relacion con Asignatura -->
		<set name="asignaturas" table="MATRICULADO" lazy="true"> <!-- se podria poner inverse="true" aqui si lo quitasemos de Asignatura.hbm.xml -->
			<key column="ALM_ID"/>
			<many-to-many column="ASIGN_ID" class="iso3.pt.model.Asignatura"/>
		</set>
		

    </class>

</hibernate-mapping>